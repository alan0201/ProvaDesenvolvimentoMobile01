<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:fillViewport="true" android:id="@+id/scrollView2">
    <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <Button
                android:text="Calcular"
                android:layout_width="141dp"
                android:layout_height="66dp"
                android:id="@+id/b_calcular" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/tvAlerta" app:layout_constraintHorizontal_bias="0.498"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.358" android:textSize="18sp"
                android:textAppearance="@android:style/TextAppearance.Large"/>
        <EditText
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/eTAlcool" android:hint="1,90"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.378"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView2" android:layout_marginEnd="16dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/eTGasolina"
                android:hint="2,50"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
                app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:text="Alcool ou Gasolina ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/TextView" android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.498" android:textSize="30sp"
                android:textAppearance="@android:style/TextAppearance.Large"/>
        <TextView
                android:text="Alcool"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/textView2" android:layout_marginTop="92dp"
                app:layout_constraintTop_toBottomOf="@+id/TextView" android:textSize="24sp"
                android:textAppearance="@android:style/TextAppearance.Large"/>
        <TextView
                android:text="Gasolina"
                android:layout_width="94dp"
                android:layout_height="29dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/textView3" android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2" android:textSize="24sp"
                android:textAppearance="@android:style/TextAppearance.Large"/>
        <TextView
                android:layout_width="250dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tvAlerta" android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/eTGasolina" android:textSize="30sp"
                app:layout_constraintHorizontal_bias="0.496" android:textColor="@color/colorAccent"
                android:textAppearance="@android:style/TextAppearance.Large"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>